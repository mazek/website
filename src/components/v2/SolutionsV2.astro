---
import { Icon } from "astro-icon/components";

const solutions = [
  { name: "Model Deployment", icon: "bx:bxs-rocket" },
  { name: "Healthcare AI", icon: "bx:bxs-heart" },
  { name: "Document Processing", icon: "bx:bxs-file-doc" },
  { name: "Financial Tracking", icon: "bx:bxs-dollar-circle" },
  { name: "Compliance Audit", icon: "bx:bxs-check-shield" },
  { name: "KYC & AML", icon: "bx:bxs-user-check" },
  { name: "Predictive Analytics", icon: "bx:bxs-bar-chart-alt-2" },
  { name: "Data Governance", icon: "bx:bxs-data" },
  { name: "AI Orchestration", icon: "bx:bxs-brain" },
  { name: "Pharma AI", icon: "bx:bxs-capsule" },
  { name: "Risk Management", icon: "bx:bxs-shield" },
  { name: "Banking AI", icon: "bx:bxs-bank" },
];
---

<section class="py-24 bg-light-bg relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Solutions</h2>
      <p class="text-xl text-text-secondary max-w-2xl mx-auto mb-12">
        Tailored AI solutions for your industryâ€”built on sovereign infrastructure
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/v2/products"
          class="inline-flex items-center gap-2 px-8 py-3 bg-brand hover:bg-brand-dark text-white rounded-lg font-semibold transition-all shadow-lg shadow-[#1f2937]/20">
          <Icon class="w-5 h-5" name="bx:bx-package" />
          View Platform
        </a>
        <a
          href="/v2/contact"
          class="inline-flex items-center gap-2 px-8 py-3 bg-transparent border-2 border-brand/30 hover:border-brand text-text-primary rounded-lg font-semibold transition-all">
          <Icon class="w-5 h-5" name="bx:bx-calendar" />
          Schedule a Demonstration
        </a>
      </div>
    </div>

    <!-- Solutions Grid -->
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
      {
        solutions.map((solution) => (
          <div class="group relative bg-light-accent/50 hover:bg-light-accent border border-brand/10 hover:border-brand/30 rounded-lg p-4 transition-all duration-300 hover:transform hover:scale-105 cursor-pointer">
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-brand/10 group-hover:bg-brand/20 flex items-center justify-center transition-colors">
                <Icon class="w-5 h-5 text-brand" name={solution.icon} />
              </div>
              <span class="text-text-secondary group-hover:text-text-primary transition-colors font-medium">
                {solution.name}
              </span>
            </div>
            <!-- Hover glow effect -->
            <div class="absolute inset-0 rounded-lg bg-brand/5 opacity-0 group-hover:opacity-100 transition-opacity -z-10 blur-xl">
            </div>
          </div>
        ))
      }
    </div>

    <!-- Additional Info -->
    <div class="mt-16 text-center">
      <p class="text-text-secondary">
        Don't see your use case?
        <a href="/v2/contact" class="text-brand hover:text-brand-dark font-semibold ml-1 underline">
          Contact us
        </a>
        for custom solutions
      </p>
    </div>
  </div>

  <!-- Background decoration -->
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-brand/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-brand-dark/5 rounded-full blur-3xl -z-10"></div>
</section>

---
const { margin } = Astro.props;
---

<footer
  class:list={[
    "py-12 border-t border-brand/10 bg-dark-bg",
    margin && "mt-24",
  ]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <!-- Company -->
      <div>
        <h3 class="font-semibold text-white mb-4">Bitropy</h3>
        <p class="text-sm text-gray-400 leading-relaxed">
          Sovereign AI infrastructure for enterprises that refuse to compromise on data sovereignty.
        </p>
      </div>

      <!-- Platform -->
      <div>
        <h3 class="font-semibold text-white mb-4">Platform</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/v2/products" class="text-gray-400 hover:text-brand transition">Products</a>
          </li>
          <li>
            <a href="/v2/products/platform" class="text-gray-400 hover:text-brand transition">
              AI Platform
            </a>
          </li>
          <li>
            <a href="/v2/products/augmentation" class="text-gray-400 hover:text-brand transition">
              Developer Augmentation
            </a>
          </li>
          <li>
            <a href="/v2/products/audit" class="text-gray-400 hover:text-brand transition">Audit</a>
          </li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="font-semibold text-white mb-4">Company</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/v2/about" class="text-gray-400 hover:text-brand transition">About Us</a>
          </li>
          <li>
            <a href="/v2/jobs" class="text-gray-400 hover:text-brand transition">Careers</a>
          </li>
          <li>
            <a href="/v2/contact" class="text-gray-400 hover:text-brand transition">Contact</a>
          </li>
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="font-semibold text-white mb-4">Resources</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/blog" class="text-gray-400 hover:text-brand transition">Blog</a>
          </li>
          <li>
            <a
              href="https://www.linkedin.com/company/bitropy/"
              target="_blank"
              rel="noopener"
              class="text-gray-400 hover:text-brand transition">
              LinkedIn
            </a>
          </li>
          <li>
            <a
              href="https://github.com/orgs/Bitropy/"
              target="_blank"
              rel="noopener"
              class="text-gray-400 hover:text-brand transition">
              GitHub
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="pt-8 border-t border-brand/10">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-400 text-center md:text-left">
          Copyright © {new Date().getFullYear()} Bitropy. All rights reserved.
        </p>
        <div class="flex gap-6 text-sm text-gray-400">
          <a href="/terms" class="hover:text-brand transition">Terms</a>
          <span>・</span>
          <a href="/privacy" class="hover:text-brand transition">Privacy</a>
        </div>
      </div>
    </div>
  </div>
</footer>

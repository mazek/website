---
interface Props {
  color?: Color;
  class?: string;
}

const { color = "DEFAULT", class: className } = Astro.props;

const colors = {
  DEFAULT: "bg-gray-100 border-gray-200 border text-gray-800",
  indigo: "bg-green-100 border-emerald-200 border text-emerald-600",
  orange: "bg-orange-100 border-orange-200 border text-orange-600",
  purple: "bg-emerald-100 border-emerald-200 border text-emerald-600",
};
type Color = keyof typeof colors;
---

<span
  class:list={[
    colors[color],
    className,
    "rounded-full text-xs font-medium px-3 py-1 ",
  ]}>
  <slot />
</span>

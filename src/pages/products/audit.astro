---
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Link from "@/components/ui/link.astro";

const auditServices = [
  {
    title: "AI Readiness & Compliance Audit",
    subtitle: "A comprehensive, executive-level audit that assesses how prepared your organization is for AI legally, technically, and operationally.",
    description: "We deliver a clear AI governance framework that exposes blind spots, highlights critical gaps, and prioritizes the improvements that matter most.",
    icon: "bx:bxs-check-shield",
  },
  {
    title: "Shadow AI Discovery",
    subtitle: "The first systematic Shadow AI audit in Europe.",
    description: "We uncover unauthorized AI tools, map data flows to external models, and assess legal, security, and reputational risk across the organization including what you don't see today.",
    icon: "bx:bx-hide",
  },
  {
    title: "Developer AI Audit",
    subtitle: "A deep dive into how AI is actually used by engineering teams.",
    description: "We analyze exposure of proprietary code to LLMs, existing guardrails, the share of AI-generated code, and the real impact on lead time, quality, and risk.",
    icon: "bx:bxs-user-circle",
  },
  {
    title: "Multi-Framework Compliance Coverage",
    subtitle: "One audit. Multiple regulations.",
    description: "We assess compliance across the EU AI Act, GDPR, Data Act, DORA, and key ISO standards including 27001, 27701, 23894 (AI Risk), and 42001 (AI Management Systems).",
    icon: "bx:bxs-file-doc",
  },
  {
    title: "Actionable Risk Intelligence",
    subtitle: "No 200-page reports. No generic recommendations.",
    description: "You receive a prioritized AI risk map, concrete attack scenarios, a full AI attack-surface heatmap, and a governance model ready for implementation.",
    icon: "bx:bx-line-chart",
  },
  {
    title: "Continuous Compliance with Bitropy",
    subtitle: "Audits are just the beginning.",
    description: "A seamless transition to the Bitropy platform enables continuous compliance, logging, traceability, and AI-driven risk intelligence keeping your organization secure as AI evolves.",
    icon: "bx:bx-sync",
  },
];
---

<Layout title="Audit">
  <Container>
    <!-- Header Section -->
    <Sectionhead>
      <Fragment slot="title">Uncompromised AI</Fragment>
      <Fragment slot="desc">
        Understand, control, and secure AI across your organization
      </Fragment>
    </Sectionhead>

    <!-- Main Description -->
    <div class="flex flex-col gap-8 mx-auto max-w-4xl mt-16">
      <div class="prose prose-lg max-w-none">
        <h2 class="font-bold text-3xl text-gray-800">
          What We Offer
        </h2>
        <p class="text-lg leading-relaxed text-slate-500">
          Uncompromised AI starts with clarity. Our products help leaders
          understand, control, and secure AI across the entire organization
          before risks turn into liabilities.
        </p>
      </div>

      <!-- Audit Services List -->
      <div class="space-y-6 mt-8">
        {auditServices.map((service) => (
          <div class="bg-white border-2 border-gray-200 rounded-xl p-6 md:p-8 hover:border-[#A898E9] hover:shadow-lg transition-all">
            <div class="flex items-start gap-4">
              <div class="bg-[#A898E9] rounded-lg p-3 flex-shrink-0">
                <Icon class="text-white w-6 h-6" name={service.icon} />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-1">
                  {service.title}
                </h3>
                <p class="text-[#A898E9] font-medium text-sm mb-3">
                  {service.subtitle}
                </p>
                <p class="text-slate-700 leading-relaxed">
                  {service.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Key Benefits -->
      <div class="bg-gradient-to-br from-[#F3F1FC] to-gray-50 rounded-2xl p-8 md:p-12 mt-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">
          Why Choose Bitropy Audit?
        </h3>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="flex items-start gap-3">
            <Icon class="text-[#A898E9] w-6 h-6 flex-shrink-0 mt-1" name="bx:bx-check-circle" />
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">Europe's First Systematic Shadow AI Audit</h4>
              <p class="text-slate-600 text-sm">
                Discover unauthorized AI tools before they become compliance nightmares
              </p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <Icon class="text-[#A898E9] w-6 h-6 flex-shrink-0 mt-1" name="bx:bx-check-circle" />
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">Multi-Framework Compliance</h4>
              <p class="text-slate-600 text-sm">
                One audit covering EU AI Act, GDPR, DORA, and key ISO standards
              </p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <Icon class="text-[#A898E9] w-6 h-6 flex-shrink-0 mt-1" name="bx:bx-check-circle" />
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">Actionable, Not Academic</h4>
              <p class="text-slate-600 text-sm">
                Prioritized risk maps and governance models ready for implementation
              </p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <Icon class="text-[#A898E9] w-6 h-6 flex-shrink-0 mt-1" name="bx:bx-check-circle" />
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">Path to Continuous Compliance</h4>
              <p class="text-slate-600 text-sm">
                Seamless transition to the Bitropy platform for ongoing AI governance
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Bottom CTA -->
      <div class="text-center mt-12 pt-8 border-t border-gray-200">
        <h3 class="text-3xl font-bold text-gray-900 mb-4">
          Ready to take control of AI?
        </h3>
        <p class="text-lg text-slate-600 mb-8 max-w-2xl mx-auto">
          Get a comprehensive audit that exposes blind spots and provides
          actionable intelligence to secure your AI landscape.
        </p>
        <div class="flex gap-4 justify-center flex-wrap">
          <Link href="/contact" class="inline-flex gap-2 items-center" style="background-color: #A898E9;">
            <Icon class="text-white w-5 h-5" name="bx:bxs-paper-plane" />
            Learn More
          </Link>
          <a
            href="/contact"
            class="inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-[#A898E9] text-[#A898E9] hover:bg-[#F3F1FC] rounded-lg font-medium transition">
            <Icon class="w-5 h-5" name="bx:bx-phone" />
            Request a Demo
          </a>
        </div>
      </div>

      <!-- Back to Products -->
      <div class="text-center mt-8 pt-8 border-t border-gray-200">
        <a
          href="/products"
          class="inline-flex items-center gap-2 text-gray-600 hover:text-[#A898E9] font-medium transition">
          <Icon class="w-5 h-5" name="bx:bx-left-arrow-alt" />
          Back to All Products
        </a>
      </div>
    </div>
  </Container>
</Layout>

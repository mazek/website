---
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const jobs = [
  {
    id: "senior-backend-engineer",
    title: "Senior Backend Engineer",
    location: "Remote / Wrocław",
    type: "Full-time",
    department: "Engineering",
    description: "Join our core platform team to build scalable AI infrastructure for enterprise clients. You'll work on Kubernetes orchestration, model serving, and secure data pipelines.",
    requirements: [
      "5+ years experience with Go, Python, or Rust",
      "Deep knowledge of Kubernetes and container orchestration",
      "Experience with distributed systems and microservices",
      "Understanding of AI/ML infrastructure is a plus",
    ],
    benefits: [
      "Competitive salary + equity",
      "Flexible remote work",
      "Work on cutting-edge AI technology",
      "Direct impact on enterprise AI adoption",
    ],
    applyLink: "mailto:careers@bitropy.io?subject=Application: Senior Backend Engineer",
  },
  {
    id: "ai-solutions-architect",
    title: "AI Solutions Architect",
    location: "Hybrid - Wrocław",
    type: "Full-time",
    department: "Customer Success",
    description: "Bridge the gap between enterprise clients and our AI platform. Design solutions, lead implementations, and ensure customer success in deploying sovereign AI.",
    requirements: [
      "3+ years in solutions architecture or technical consulting",
      "Experience with enterprise AI/ML deployments",
      "Strong communication and presentation skills",
      "Understanding of compliance requirements (GDPR, etc.)",
    ],
    benefits: [
      "Work directly with enterprise clients",
      "Shape product roadmap through customer feedback",
      "Travel opportunities across Europe",
      "Competitive compensation package",
    ],
    applyLink: "mailto:careers@bitropy.io?subject=Application: AI Solutions Architect",
  },
  {
    id: "frontend-engineer",
    title: "Frontend Engineer",
    location: "Remote",
    type: "Full-time",
    department: "Engineering",
    description: "Build intuitive interfaces for AI platform management, monitoring, and governance. Create tools that make complex AI operations simple for enterprise users.",
    requirements: [
      "3+ years experience with React/TypeScript",
      "Experience with data visualization and dashboards",
      "Understanding of design systems and UI/UX principles",
      "Bonus: Experience with AI/ML tools or platforms",
    ],
    benefits: [
      "Work on greenfield projects",
      "Collaborate with product and design",
      "Full remote flexibility",
      "Modern tech stack and best practices",
    ],
    applyLink: "mailto:careers@bitropy.io?subject=Application: Frontend Engineer",
  },
];
---

<Layout title="Jobs">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Join Our Team</Fragment>
      <Fragment slot="desc">
        Help us unlock production AI for regulated industries
      </Fragment>
    </Sectionhead>

    <!-- Introduction -->
    <div class="mx-auto max-w-4xl mt-16">
      <div class="prose prose-lg max-w-none mb-12">
        <p class="text-lg leading-relaxed text-slate-600">
          We're building the future of sovereign AI infrastructure. Join a team
          of passionate engineers and problem-solvers who believe enterprises
          deserve AI that works for them—not the other way around.
        </p>
        <p class="text-lg leading-relaxed text-slate-600 mt-4">
          At Bitropy, you'll work on cutting-edge technology that's making real
          impact in pharma, banking, and other regulated industries.
        </p>
      </div>

      <!-- Current Openings -->
      <h2 class="text-3xl font-bold text-gray-900 mb-8">
        Current Openings
      </h2>

      {jobs.length === 0 ? (
        <!-- No jobs state -->
        <div class="bg-gray-50 rounded-2xl p-12 text-center">
          <Icon class="w-16 h-16 text-gray-400 mx-auto mb-4" name="bx:bx-briefcase" />
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            No open positions right now
          </h3>
          <p class="text-slate-600 mb-6">
            We're always looking for talented people. Send us your CV at{" "}
            <a href="mailto:careers@bitropy.io" class="text-emerald-600 hover:text-emerald-700">
              careers@bitropy.io
            </a>
          </p>
        </div>
      ) : (
        <!-- Jobs list -->
        <div class="space-y-6">
          {jobs.map((job) => (
            <div class="bg-white border-2 border-gray-200 rounded-2xl p-6 md:p-8 hover:border-emerald-400 hover:shadow-lg transition-all">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-4">
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-2">
                    {job.title}
                  </h3>
                  <div class="flex flex-wrap gap-3 text-sm">
                    <span class="inline-flex items-center gap-1 text-slate-600">
                      <Icon class="w-4 h-4" name="bx:bx-map" />
                      {job.location}
                    </span>
                    <span class="inline-flex items-center gap-1 text-slate-600">
                      <Icon class="w-4 h-4" name="bx:bx-time" />
                      {job.type}
                    </span>
                    <span class="inline-flex items-center gap-1 text-emerald-600 font-medium">
                      <Icon class="w-4 h-4" name="bx:bx-briefcase" />
                      {job.department}
                    </span>
                  </div>
                </div>
                <a
                  href={job.applyLink}
                  class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-medium transition whitespace-nowrap">
                  Apply Now
                  <Icon class="w-4 h-4" name="bx:bx-right-arrow-alt" />
                </a>
              </div>

              <p class="text-slate-700 leading-relaxed mb-6">
                {job.description}
              </p>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <h4 class="font-semibold text-gray-900 mb-3 flex items-center gap-2">
                    <Icon class="w-5 h-5 text-emerald-600" name="bx:bx-check-circle" />
                    What we're looking for
                  </h4>
                  <ul class="space-y-2">
                    {job.requirements.map((req) => (
                      <li class="text-slate-600 flex items-start gap-2">
                        <span class="text-emerald-600 mt-1">•</span>
                        <span>{req}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-3 flex items-center gap-2">
                    <Icon class="w-5 h-5 text-emerald-600" name="bx:bx-star" />
                    What we offer
                  </h4>
                  <ul class="space-y-2">
                    {job.benefits.map((benefit) => (
                      <li class="text-slate-600 flex items-start gap-2">
                        <span class="text-emerald-600 mt-1">•</span>
                        <span>{benefit}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          ))}
        </div>
      )}

      <!-- Company Culture / Why Bitropy -->
      <div class="bg-gradient-to-br from-emerald-50 to-gray-50 rounded-2xl p-8 md:p-12 mt-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          Why Work at Bitropy?
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <div class="bg-emerald-600 rounded-lg p-3 w-12 h-12 flex items-center justify-center mb-4">
              <Icon class="w-6 h-6 text-white" name="bx:bxs-rocket" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">
              Cutting-Edge Technology
            </h3>
            <p class="text-slate-600">
              Work with the latest in AI, Kubernetes, and distributed systems.
              Shape the future of sovereign AI.
            </p>
          </div>
          <div>
            <div class="bg-emerald-600 rounded-lg p-3 w-12 h-12 flex items-center justify-center mb-4">
              <Icon class="w-6 h-6 text-white" name="bx:bxs-group" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">
              Talented Team
            </h3>
            <p class="text-slate-600">
              Join passionate builders and problem-solvers who've spent years
              inside enterprise AI.
            </p>
          </div>
          <div>
            <div class="bg-emerald-600 rounded-lg p-3 w-12 h-12 flex items-center justify-center mb-4">
              <Icon class="w-6 h-6 text-white" name="bx:bxs-like" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">
              Real Impact
            </h3>
            <p class="text-slate-600">
              Your work directly enables pharma companies, banks, and enterprises
              to innovate with AI.
            </p>
          </div>
        </div>
      </div>

      <!-- Contact for spontaneous applications -->
      <div class="text-center mt-12 pt-8 border-t border-gray-200">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          Don't see your role?
        </h3>
        <p class="text-lg text-slate-600 mb-6">
          We're always interested in hearing from talented people.
          Send us your CV and tell us why you want to join Bitropy.
        </p>
        <a
          href="mailto:careers@bitropy.io"
          class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-medium transition">
          <Icon class="w-5 h-5" name="bx:bx-envelope" />
          careers@bitropy.io
        </a>
      </div>
    </div>
  </Container>
</Layout>

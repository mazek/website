---
import LayoutV2 from "@/layouts/LayoutV2.astro";
import { Icon } from "astro-icon/components";

const products = [
  {
    id: "platform",
    title: "AI Platform",
    subtitle: "Sovereign AI infrastructure that runs inside your walls",
    icon: "bx:bxs-server",
    description:
      "Our modular platform handles inference, governance, and secure data integrations. Deploy production-scale AI in weeks, not months, with complete data sovereignty.",
    features: [
      "Built on open-source: Kubernetes, vLLM, PostgreSQL",
      "Full compliance: GDPR, BaFin, EU AI Act ready",
      "70% more cost-effective than traditional consulting builds",
      "Deploy in under 2 weeks",
    ],
    href: "/v2/products/platform",
  },
  {
    id: "augmentation",
    title: "Developer Augmentation",
    subtitle: "Uncompromised AI for engineering teams",
    icon: "bx:bxs-wrench",
    description:
      "We help developers build, ship, and operate AI-driven systems using production-grade tooling, clear guardrails, and battle-tested architectures.",
    features: [
      "AI-Native solution engineering from POC to production",
      "LLM & Agent tooling integration",
      "Production AI stack: routing, guardrails, observability",
      "Platform architecture for cloud, on-prem, hybrid",
    ],
    href: "/v2/products/augmentation",
  },
  {
    id: "audit",
    title: "AI Audit & Compliance",
    subtitle: "Understand, control, and secure AI across your organization",
    icon: "bx:bxs-check-shield",
    description:
      "Comprehensive AI governance framework that exposes blind spots, highlights critical gaps, and prioritizes the improvements that matter most.",
    features: [
      "Europe's first systematic Shadow AI audit",
      "Multi-framework compliance (EU AI Act, GDPR, DORA, ISO)",
      "Actionable risk intelligence, not generic reports",
      "Seamless transition to continuous compliance",
    ],
    href: "/v2/products/audit",
  },
];
---

<LayoutV2 title="Products">
  <!-- Hero Section -->
  <section class="relative py-24 bg-gradient-to-b from-dark-bg via-dark-accent to-dark-bg overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div class="inline-block px-4 py-2 mb-6 rounded-full bg-brand/10 border border-brand/20">
        <span class="text-brand text-sm font-medium uppercase tracking-wider">Our Solutions</span>
      </div>

      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        Built for Sovereign AI
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Three pillars of enterprise AI: Platform, People, Process. Deploy infrastructure, empower teams,
        and maintain continuous complianceâ€”all with complete data sovereignty.
      </p>
    </div>

    <!-- Background decoration -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-brand/5 rounded-full blur-3xl -z-10">
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-24 bg-dark-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-16">
        {
          products.map((product, index) => (
            <div class={`group relative ${index % 2 === 1 ? "lg:flex-row-reverse" : ""}`}>
              <div class={`grid lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? "lg:flex-row-reverse" : ""}`}>
                {/* Content */}
                <div class={index % 2 === 1 ? "lg:order-2" : ""}>
                  <div class="flex items-center gap-4 mb-4">
                    <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-brand to-[#8B7BC9] flex items-center justify-center shadow-lg shadow-[#A898E9]/30">
                      <Icon class="w-8 h-8 text-white" name={product.icon} />
                    </div>
                    <div>
                      <h2 class="text-3xl font-bold text-white">{product.title}</h2>
                      <p class="text-brand font-medium">{product.subtitle}</p>
                    </div>
                  </div>

                  <p class="text-lg text-gray-300 mb-6 leading-relaxed">{product.description}</p>

                  <ul class="space-y-3 mb-8">
                    {product.features.map((feature) => (
                      <li class="flex items-start gap-3">
                        <div class="flex-shrink-0 w-6 h-6 rounded-full bg-brand/20 flex items-center justify-center mt-0.5">
                          <Icon class="w-4 h-4 text-brand" name="bx:bx-check" />
                        </div>
                        <span class="text-gray-300">{feature}</span>
                      </li>
                    ))}
                  </ul>

                  <a
                    href={product.href}
                    class="inline-flex items-center gap-2 px-6 py-3 bg-brand hover:bg-brand-dark text-white rounded-lg font-semibold transition-all shadow-lg shadow-[#A898E9]/20">
                    Learn More
                    <Icon class="w-5 h-5" name="bx:bx-right-arrow-alt" />
                  </a>
                </div>

                {/* Visual */}
                <div class={index % 2 === 1 ? "lg:order-1" : ""}>
                  <div class="relative aspect-square max-w-md mx-auto">
                    <div class="absolute inset-0 bg-dark-accent border-2 border-brand/20 rounded-2xl flex items-center justify-center group-hover:border-brand/40 transition-colors">
                      <Icon class="w-48 h-48 text-brand/30 group-hover:text-brand/50 transition-colors" name={product.icon} />
                    </div>
                    {/* Glow effect */}
                    <div class="absolute inset-0 bg-brand/10 rounded-2xl blur-2xl group-hover:bg-brand/20 transition-colors">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-to-b from-dark-bg to-dark-accent">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">Ready to Deploy Sovereign AI?</h2>
      <p class="text-xl text-gray-300 mb-10 max-w-3xl mx-auto">
        See how Bitropy can help you deploy production-scale AI in under two weeks.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/v2/contact"
          class="inline-flex items-center gap-2 px-8 py-4 bg-brand hover:bg-brand-dark text-white rounded-lg font-semibold transition-all shadow-lg shadow-[#A898E9]/30">
          <Icon class="w-5 h-5" name="bx:bxs-paper-plane" />
          Get Started
        </a>
        <a
          href="/v2"
          class="inline-flex items-center gap-2 px-8 py-4 bg-transparent border-2 border-brand/30 hover:border-brand text-white rounded-lg font-semibold transition-all">
          <Icon class="w-5 h-5" name="bx:bx-left-arrow-alt" />
          Back to Home
        </a>
      </div>
    </div>
  </section>
</LayoutV2>
